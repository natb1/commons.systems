rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Messages are publicly readable (no auth yet â€” Phase 5)
    match /ns/{namespace}/messages/{messageId} {
      allow read: if true;
      allow write: if false;
    }

    // Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
